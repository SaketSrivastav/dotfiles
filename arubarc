function execcmd () {
    echo "Executing: $1"
    $1
}

function htg () {
    if [[ -z $1 || -z $2 || -z $3 ]]
    then
        echo "usage: htg <platform-name> <image-path> <tests> <repeat=1>"
        return 1
    fi

    if [[ -z $4 ]]
    then
        $4 = 1    
    fi

    set -x
    ht -h $1 -y -i $2 -t $3 -r $4
    set +x
}

function toxr () {
    if [[ -z $1 || -z $2 ]]
    then
        echo "usage: toxr <rsvnid> <tests>"
        return 1
    fi
    set +x
    tox -r -- --topology-platform ostl --ostl-lab OSTL --ostl-rsvnid $1\
        --ostl-destroy false -k $2 -s
    set +x
}

function docker_env_setup() {
    if [[ -z $1 ]]; then
        print_err "docker container name missing, cant scp"
        return 1
    fi

    print_text "Copying delve binary to container $1"
    docker cp $HOME/gowork/bin/dlv $1:/usr/bin/
}

function rundsgreen() {
    docker rm green &> /dev/null
    docker rmi green &> /dev/null
    green_dir="/aruba/pub/cit/halon/greenLabel"
    green_img="genericx86-p4_essw_cit_master.tar.gz"
    pushd $green_dir &> /dev/null
    popd &> /dev/null
    print_text "Creating greenLabel halon docker switch: exposed ports(app: 9443, dbg: 1200) "
    docker import "$green_dir/$green_img" green &> /dev/null
    docker run --privileged --detach --security-opt="seccomp=unconfined" --name green --publish 9443:443/tcp --publish 1200:1234 green /sbin/init &> /dev/null
    docker_env_setup green
    print_text "Docker switch green: "
    status=$(docker ps -q -f name=green)
    if [[ -z status ]]; then
        print_err "Failed to create green container"
        return 1
    fi

    print_text "\t\t$status"
}

function runds () {
    if [[ -z $1 && -z $2 ]]
    then
        print_err "usage: runds <halon-ws> port"
        print_err "usage: runds <clean> <halon-ws>/all"
        return 1
    fi

    if [[ $1 == "clean" ]]
    then
        if [[ -z $2 ]]
        then
           print_text "Clean all docker instances and images"
           docker rm -f $(docker ps -a -q)
           docker rmi -f $(docker images -q)
           return 0
        fi

        print_text "Cleaning halon$2"
        docker rm -f $(docker ps -f name=halon$2 -q)
        docker rmi -f $(docker images halon$2:latest -q)
        return 0
    fi

    cont_name="halon$1"
    build_dir="/ws/$USER/halon$1/halon/images/arubaoscx-disk-image-genericx86-p4.tar.gz"
    print_text "Creating docker container $cont_name from $build_dir and exposing $2:443 port and debug port 1234:1234"
    docker import $build_dir $cont_name
    docker run --privileged --detach --security-opt="seccomp=unconfined" --name $cont_name --publish $2:443/tcp --publish 1234:1234 $cont_name /sbin/init
    docker_env_setup $cont_name
    enterdocker $(echo $cont_name)
}

function get_latest_pf_bname() {

    if [[ -z $1 ]]; then
        echo "usage: get_latest_pf_name <ridley/speedway/golfclub/topflite>"
        return 1
    fi

    case $1 in
        "ridley")
            pf_prefix="XL"
            ;;
        "topflite")
            pf_prefix="TL"
            ;;
        "golfclub")
            pf_prefix="GL"
            ;;
        "speedway")
            pf_prefix="FL"
            ;;
    esac

    if [[ -z $pf_prefix ]]; then
        return 1
    fi

    pushd /aruba/release/master/official > /dev/null
    local bname=$(ls -t | grep "$pf_prefix"_ | head -n 1)
    popd > /dev/null
    echo "$bname"
}

function hdebug() {
    if [[ -z $1 || -z $2 || -z $3 ]]; then
        print_err "usage: hdebug <crnumber> <daemon-name> <platform-name>"
        return 1
    fi

    cr_dir="/aruba/cr_data/CR$1"
    dn=$2
    p=$(get_latest_pf_bname $3)

    set +x
    # Find the core file in cr directory
    pushd $cr_dir > /dev/null
    print_text "Search for core file in $cr_dir"
    xz_core_file=$(find . -name "core.$dn.*.xz" | head -n 1)
    if [[ -z $xz_core_file ]]; then
        core_file=$(find . -name "core.$dn.*" | head -n 1)
    else
        xz -d $xz_core_file
        core_file=$(find . -name "core.$dn.*" | head -n 1)
    fi

    if [[ -z $core_file ]]; then
        print_text "Failed to geerate or get core file at $cr_dir for daemon $dn"
        return 1
    fi

    print_text "Analysing core file $cr_dir/$core_file present for daemon $dn"
    Coredump-Analyzer -r $p -c $core_file
    print_text "Core file analyzed"
    popd  > /dev/null

    pushd /ws/$USER/triage/$p/mm/rootfs-dbg/usr/lib/debug/usr/bin/ > /dev/null
    dlv core $dn.debug $cr_dir/$core_file
    set +x
}

function cpdlv () {
    if [[ -z $1 ]]; then
        print_err "usage: cpdlv <ip>"
        return 1
    fi

    print_text "Copying delve to admin@$1"
    scp $HOME/gowork/bin/dlv admin@$1:/usr/local/sbin/
}

