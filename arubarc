# Docker aliases
function dcpd() {
    if [[ -z $1 || -z $2 || -z $3 ]]; then
       echo "usage: dockercp <ws-num> <daemon-name> <docker-image>"
       return 1
    fi
    # echo "docker cp /ws/$USER/$1/halon/build-genericx86-p4/tmp/work/core2-64-cnos-linux/$2/1.0-r0/image/usr/bin/$2 $3:/usr/bin/"
    echo "docker cp /ws/$USER/$1/halon/build-genericx86-p4/tmp/work/genericx86_p4-cnos-linux/arubaoscx-disk-image/1.0-r0/rootfs-dbg/usr/lib/debug/usr/bin/$2.debug $3:/usr/bin/$2"
    #docker cp /ws/$USER/$1/halon/build-genericx86-p4/tmp/work/core2-64-cnos-linux/$2/1.0-r0/image/usr/bin/$2 $3:/usr/bin/
    docker cp /ws/$USER/$1/halon/build-genericx86-p4/tmp/work/genericx86_p4-cnos-linux/arubaoscx-disk-image/1.0-r0/rootfs-dbg/usr/lib/debug/usr/bin/$2.debug $3:/usr/bin/$2
}

function dcpb() {
    if [[ -z $1 ]]; then
        print_err "usage: dcpb <cont-name>"
        return 1
    fi
    print_text "copying fault_finder and tx_rx data gen to $1"
    docker cp /ws/$USER/halon-benchmark/data_gen/fault_finder_data_gen.py $1:/home/admin/
    docker cp /ws/$USER/halon-benchmark/data_gen/tx_rx_data_gen.py $1:/home/admin/
}

